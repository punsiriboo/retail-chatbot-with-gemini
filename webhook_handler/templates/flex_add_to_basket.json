{
    "type": "bubble",
    "body": {
        "type": "box",
        "layout": "vertical",
        "contents": [
            {
                "type": "box",
                "layout": "baseline",
                "contents": [
                    {
                        "type": "icon",
                        "url": "https://storage.googleapis.com/line-cj-demo-chatboot/image/shopping-basket-green.png"
                    },
                    {
                        "type": "text",
                        "contents": [
                            {
                                "type": "span",
                                "text": "เพิ่มสินค้าในตระกร้า",
                                "size": "md",
                                "weight": "bold"
                            }
                        ],
                        "offsetStart": "10px"
                    }
                ],
                "paddingAll": "10px",
                "paddingStart": "20px"
            },
            {
                "type": "separator",
                "margin": "xs"
            },
            {
                "type": "box",
                "layout": "horizontal",
                "contents": [
                    {
                        "type": "box",
                        "layout": "vertical",
                        "contents": [
                            {
                                "type": "image",
                                "aspectMode": "cover",
                                "size": "full",
                                "url": "<PRODUCT_IMAGE_URL>"
                            }
                        ],
                        "width": "80px",
                        "height": "80px"
                    },
                    {
                        "type": "box",
                        "layout": "vertical",
                        "contents": [
                            {
                                "type": "text",
                                "text": "<PRODUCT_NAME>",
                                "wrap": true,
                                "size": "sm",
                                "align": "start"
                            }
                        ]
                    }
                ],
                "spacing": "xl",
                "paddingAll": "15px"
            }
        ],
        "paddingAll": "0px"
    },
    "footer": {
        "type": "box",
        "layout": "vertical",
        "contents": [
            {
                "type": "button",
                "action": {
                    "type": "postback",
                    "label": "สรุปรายการสั้งซื้อ",
                    "data": "action=summary_order&item_price=<PRODUCT_PRICE>&item_name=<PRODUCT_NAME>"
                },
                "style": "primary",
                "color": "#00A150",
                "height": "sm"
            }
        ],
        "offsetTop": "-10px"
    }
}