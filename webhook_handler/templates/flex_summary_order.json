{
    "type": "bubble",
    "hero": {
        "type": "image",
        "url": "https://storage.googleapis.com/line-cj-demo-chatboot/image/shopping_sum.png",
        "size": "full",
        "aspectRatio": "2:1",
        "aspectMode": "cover",
        "gravity": "center"
    },
    "body": {
        "type": "box",
        "layout": "vertical",
        "contents": [
            {
                "type": "text",
                "text": "RECEIPT",
                "weight": "bold",
                "color": "#1DB446",
                "size": "md"
            },
            {
                "type": "text",
                "text": "สรุปรายการสั้งซื้อ",
                "size": "sm",
                "color": "#aaaaaa",
                "wrap": true
            },
            {
                "type": "separator",
                "margin": "xxl"
            },
            {
                "type": "box",
                "layout": "vertical",
                "margin": "xxl",
                "spacing": "sm",
                "contents": [
                    <BOX_PRODUCT_INFO_JSON>,
                    {
                        "type": "separator",
                        "margin": "xxl"
                    },
                    {
                        "type": "box",
                        "layout": "horizontal",
                        "margin": "xxl",
                        "contents": [
                            {
                                "type": "text",
                                "text": "ITEMS",
                                "size": "sm",
                                "color": "#555555"
                            },
                            {
                                "type": "text",
                                "text": "<FINAL_ITEMS>",
                                "size": "sm",
                                "color": "#111111",
                                "align": "end"
                            }
                        ]
                    },
                    {
                        "type": "box",
                        "layout": "horizontal",
                        "contents": [
                            {
                                "type": "text",
                                "text": "TOTAL",
                                "size": "sm",
                                "color": "#555555"
                            },
                            {
                                "type": "text",
                                "text": "<FINAL_PRICE>",
                                "size": "sm",
                                "color": "#111111",
                                "align": "end"
                            }
                        ]
                    }
                ]
            }
        ]
    },
    "footer": {
        "type": "box",
        "layout": "vertical",
        "contents": [
            {
                "type": "button",
                "action": {
                    "type": "postback",
                    "label": "ชำระเงิน",
                    "data": "action=make_payment"
                },
                "color": "#00A150",
                "style": "primary"
            }
        ]
    },
    "styles": {
        "footer": {
            "separator": true
        }
    }
}